---
import Layout from "./Layout.astro";

interface Props {
  title: string;
  description: string;
  vinculo: string;
}

const { title, description, vinculo } = Astro.props;
---

<Layout>
  <h3 class="text-xl font-bold">
    <a href={ vinculo } target="_blank">
      <span>
        {title}
      </span>
    </a>
  </h3>
  <p class="text-sm text-gray-500 dark:text-gray-400">
    {description}
  </p>
</Layout>
